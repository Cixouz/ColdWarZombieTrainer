<Window x:Class="ColdWarZombieTrainer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"    
        xmlns:local="clr-namespace:ColdWarZombieTrainer"
        mc:Ignorable="d"
        Title="Tranny Trainer" Height="690" Width="827"
        ResizeMode="NoResize">

    <Grid Loaded="OnLoaded" Background="#FF1E1E1E">


        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="15px" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="15px" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <GridSplitter 
            Grid.Row="2"
            HorizontalAlignment="Stretch" 
            VerticalAlignment="Center"
            Background="#FF2D2D2D" 
            ShowsPreview="true"
            Width="auto"
            Height="2"/>

        <GridSplitter 
            Grid.Row="4"
            HorizontalAlignment="Stretch" 
            VerticalAlignment="Center"
            Background="#FF2D2D2D" 
            ShowsPreview="true"
            Width="auto"
            Height="2"/>

        <Image Grid.Row="0" Source="C:\Users\Carlsson\source\repos\ColdWarZombieTrainer\ColdWarZombieTrainer\pngaaa.com-2142448.png" Margin="233,2,545,10"/>
        <Image Grid.Row="0" Source="C:\Users\Carlsson\source\repos\ColdWarZombieTrainer\ColdWarZombieTrainer\pngaaa.com-2142448.png" Margin="545,2,233,10"/>

        <Label Grid.Row="0" Content="FEETish Trainer" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="25" FontFamily="Comic Sans MS"/>
        <Button Grid.Row="0" Content="Start" HorizontalAlignment="Left" VerticalAlignment="Center" Height="35" Width="66" Name="StartButton" Click="StartButton_Click" Margin="738,0,0,0"/>

        <Grid Width="auto" Height="auto" Grid.Row="1">
                  <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="250px" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <CheckBox Grid.Column="0" Content="God Mode" Name="GodModeCheckBox" HorizontalAlignment="Left"  VerticalAlignment="Center" Checked="GodModeEnable" Unchecked="GodModeDisable" Height="22" Margin="10,0,0,0"/>
            <CheckBox Grid.Row="1" Grid.Column="0" Content="Speed Hack" Name="SpeedHackCheckBox" HorizontalAlignment="Left"  VerticalAlignment="Center" Checked="SpeedHackEnabled" Unchecked="SpeedHackDisable" Height="23" Margin="10,0,0,0"/>
            <Slider Grid.Row="1" Grid.Column="1" Name="SpeedHackValueSlider" HorizontalAlignment="Center" VerticalAlignment="Center" Width="120" AutoToolTipPlacement="TopLeft" AutoToolTipPrecision="0" Maximum="10" Minimum="1" Height="22" Background="{x:Null}" Orientation="Horizontal" TickPlacement="None"/>
            <CheckBox Grid.Row="2" Grid.Column="0" Content="Infinite Money  " Name="MoneyHackCheckBox" HorizontalAlignment="Left" Width="101" Checked="InfiniteMoneyHack" Unchecked="InfiniteMoneyDisable" Height="23" Margin="10,1,0,2"/>
            <CheckBox Grid.Row="3" Grid.Column="0" Content="Infinite Ammo" Name="InfiniteAmmoCheckBox"  HorizontalAlignment="Left"  VerticalAlignment="Center" Width="101" Checked="InfiniteAmmoEnable" Unchecked="InfiniteAmmoDisable" Height="23" Margin="10,0,0,0"/>
            <CheckBox Grid.Row="6" Grid.Column="0" Content="Rapid Fire (Not Implemented)" HorizontalAlignment="Left"  VerticalAlignment="Center" Margin="10,0,0,0"/>
            <CheckBox Grid.Row="7" Grid.Column="0" Content="Always Crit (Not Implemented)" HorizontalAlignment="Left"  VerticalAlignment="Center" Grid.ColumnSpan="2" Margin="10,0,0,0"/>
            <CheckBox Grid.Row="8" Grid.Column="0" Content="Thermal Vision (Not Implemented)" HorizontalAlignment="Left"  VerticalAlignment="Center" Grid.ColumnSpan="2" Margin="10,0,0,0"/>
            <Button Grid.Row="1" Grid.Column="3" Height="25px" Width="100px"  Content="Set Weapon" HorizontalAlignment="Left" VerticalAlignment="Top"/>
            <ComboBox Grid.Row="1" Grid.Column="3" HorizontalAlignment="Left" VerticalAlignment="Top" Width="120" Margin="127,0,0,0" />
            <Label Grid.Row="2" Grid.Column="3"  Content="Weapon: MyWeapon" Grid.ColumnSpan="2"/>
        </Grid>

        <Grid Width="auto" Height="auto" Grid.Row="3">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <CheckBox Grid.Column="0" Content="Instant Kill (1hp zombies)" Name="InstantKill" HorizontalAlignment="Left"  VerticalAlignment="Center" Checked="InstantKillEnable" Unchecked="InstantKillDisable" Height="23" Margin="10,0,0,0" Width="152"/>
            <CheckBox Grid.Row="1" Grid.Column="0" Content="Teleport Zombies Too Crosshair" Name="TeleportZombieCheckBox" HorizontalAlignment="Left"  VerticalAlignment="Center" Checked="TeleportZombiesEnabled" Unchecked="TeleportZombiesDisable" Height="23" Margin="10,0,0,0" Width="185"/>
            <CheckBox Grid.Row="2" Grid.Column="0" Content="Teleport Zombies Too Position (Not Implemented)" Name="TeleportZombiePositionCheckBox" HorizontalAlignment="Left"  VerticalAlignment="Center" Checked="TeleportZombiesEnabled" Unchecked="TeleportZombiesDisable" Height="23" Margin="10,0,0,0"/>
            <Button Grid.Row="2" Grid.Column="1" Height="25px" Width="100px"  Content="Set Position" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5,0,0,0"/>
            <Label Grid.Row="2" Grid.Column="2" Content="Set Position: [0,0,0]"/>
        </Grid>

        <Grid Width="auto" Height="130px" Grid.Row="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="469*"/>
                <ColumnDefinition Width="358*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <CheckBox Grid.Column="0" Content="XP Modifier" Name="XpModiferCheckBox" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="373,0,0,0"/>
            <Slider Grid.Row="1" Grid.Column="0" Name="XpModiferSlider"  HorizontalAlignment="Left" VerticalAlignment="Center" Width="500" AutoToolTipPlacement="TopLeft" AutoToolTipPrecision="0" Maximum="5000" Minimum="1" Height="22" Orientation="Horizontal" TickPlacement="None" Grid.ColumnSpan="2" Margin="164,0,0,0"/>

            <CheckBox Grid.Row="2" Grid.Column="0" Content="Weapon XP Modifier" Name="GunXpModiferCheckBox" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.ColumnSpan="2" Margin="349,0,0,0"/>
            <Slider Grid.Row="3" Grid.Column="0" Name="GunModiferSlider" HorizontalAlignment="Left" VerticalAlignment="Center" Width="500" AutoToolTipPlacement="TopLeft" AutoToolTipPrecision="0" Maximum="5000" Minimum="1" Height="22" Orientation="Horizontal" TickPlacement="None" Grid.ColumnSpan="2" Margin="164,0,0,0"/>

            <CheckBox Grid.Row="4" Grid.Column="0" Content="TimeScale Modifier (Not Implemented)" Name="TimeScaleModiferCheckBox" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.ColumnSpan="2" Margin="301,0,0,0"/>
            <Slider Grid.Row="5" Grid.Column="0" Name="TimeScaleModiferSlider"  HorizontalAlignment="Left" VerticalAlignment="Center" Width="500" AutoToolTipPlacement="TopLeft" AutoToolTipPrecision="0" Maximum="5000" Minimum="1" Height="22" Orientation="Horizontal" TickPlacement="None" Grid.ColumnSpan="2" Margin="164,0,0,0"/>
        </Grid>

        <Grid Width="auto" Height="225" Grid.Row="6" VerticalAlignment="Bottom" HorizontalAlignment="Center">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Label Grid.Column="0" Content="Console" HorizontalAlignment="Left"  VerticalAlignment="Center" RenderTransformOrigin="-0.678,1.548"/>
            <TextBox Grid.Row="1" Name="Console" HorizontalAlignment="Center"  VerticalAlignment="Top" Height="181" Width="780" Background="#FF2D2D2D" IsEnabled="False"/>
        </Grid>
    </Grid>
</Window>